<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/submit_activity"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.chornsby.touristtracker.submit.SubmitActivity" >

        <TextView
            android:id="@+id/connectionWarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacer_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/tt_secondary"
            android:text="@string/internet_connection_required" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacer_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/label_submit_data" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacer_margin"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/user_email_edit_text"
            android:hint="@string/hint_add_email" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacer_margin"
            android:layout_gravity="center_horizontal"
            android:text="@string/action_submit_data"
            android:id="@+id/button" />

    </LinearLayout>

</ScrollView>